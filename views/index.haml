%html
	%head
		%title Instagram photos
		%meta{"content" => "text/html; charset: utf-8"}
		%link{rel: "stylesheet", href: "css/uikit.min.css"}
		%script{src: "js/jquery.min.js"}
		%script{src: "js/uikit.min.js"}
		%script{src: "https://api-maps.yandex.ru/2.1/?lang=ru_RU"}
		%script{src: "js/ymap-tools.js"}

%body
	%div.uk-container.uk-container-center.uk-margin-top
		%div.uk-grid
			%div.uk-width-1-1
				%h1.uk-heading-large Instagram photos by coords
				%p.uk-text-large Receiving latest photos from instagram by given coords
		%div.uk-grid
			%div.uk-width-medium-1-2.uk-container-center{:id => "map", :style => "width: 600px; height: 400px"}
			%div.uk-width-medium-1-2.uk-container-center
				%form.uk-form{:method => 'post'}
					%legend Get photos
					%fieldset
						%input#coord_lat.uk-margin-small-top{type: "hidden", name: "lat", value: "#{(defined? lat) ? lat : ''}"}
						%input#coord_lon.uk-margin-small-top{type: "hidden", name: "lon", value: "#{(defined? lon) ? lon : ''}"}
						%input#dist.uk-margin-small-top{type: "hidden", name: "dist",  value: "#{(defined? dist) ? dist : '1000'}"}
						%button#button_photos.uk-button-large.uk-width-1-1{type: "submit"} Get photos
				%div.uk-grid	
					%div.uk-width-2-10
						%button#share_button.uk-button{:type= => 'button'} Share
					%div.uk-width-8-10
						%div#share_link.uk-text-primary

		%div#photos.uk-grid

